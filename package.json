{
  "name": "plain-toast",
  "version": "1.0.3",
  "description": "Lightweight, accessible toast notifications with zero dependencies",
  "keywords": [
    "toast",
    "notification",
    "vanilla",
    "javascript",
    "a11y",
    "accessible",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/plain-toast.cjs.js",
  "module": "./dist/plain-toast.esm.js",
  "browser": "./dist/plain-toast.iife.js",
  "types": "./dist/types/main.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/plain-toast.esm.js",
      "require": "./dist/plain-toast.cjs.js",
      "browser": "./dist/plain-toast.iife.js",
      "default": "./dist/plain-toast.esm.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briantuckerdesign/plain-toast"
  },
  "bugs": {
    "url": "https://github.com/briantuckerdesign/plain-toast/issues"
  },
  "homepage": "https://github.com/briantuckerdesign/plain-toast#readme",
  "author": "Brian Tucker",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "watch": "concurrently \"bun run http-server dist -p 8080 -s\" \"bun run build --watch\"",
    "build": "bun run build.ts",
    "dev": "bun run watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "bun run prettier --write .",
    "lint": "eslint src tests --ext .ts",
    "prepublishOnly": "bun test && bun run build"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "http-server": "^14.1.1",
    "prettier": "^2.8.3",
    "typescript": "^5.3.3"
  }
}

{
  "name": "vanilla-toast",
  "version": "0.1.0",
  "description": "Lightweight, accessible toast notifications with zero dependencies",
  "keywords": ["toast", "notification", "vanilla", "javascript", "a11y", "accessible", "typescript"],
  "license": "MIT",
  "main": "src/main.ts",
  "module": "src/main.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/briantuckerdesign/vanilla-toast"
  },
  "bugs": {
    "url": "https://github.com/briantuckerdesign/vanilla-toast/issues"
  },
  "homepage": "https://github.com/briantuckerdesign/vanilla-toast#readme",
  "author": "Brian Tucker",
  "scripts": {
    "watch": "concurrently \"bun run http-server dist -p 8080 -s\" \"bun run vite build --watch\"",
    "build": "bun run vite build",
    "dev": "bun run watch",
    "format": "bun run prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "prettier": "^2.8.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}